from .Geom import Geom
from .Shape import Shape

import math as mth


class Circle(Shape):
    def __init__(self, blueprint: list):
        self.geomType = "Circle"
        # Shape __init__() invokes the construct method to obtain the description
        super().__init__(blueprint)

    def construct(self, blueprint: list):
        """"""
        # Assume blueprint is a list: center: Point, radius: Float
        self.center = blueprint[0]
        self.radius = blueprint[1]
        description = blueprint  # circle description is [center: Point, radius: float]
        return description

    # area method
    def area(self):
        return mth.pi * self.radius**2

